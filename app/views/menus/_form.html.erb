<%= form_with(model: menu, local: true) do |form| %>
   <p>
    <%= form.label :Menu_item %><br>
    <%= form.text_field :name %>
  </p>
   <p>
    <%= form.label :Price %><br>
    <%= form.text_field :price %>
  </p>
   <p>
    <%= form.label :Quantity %><br>
    <%= form.text_field :quantity %>
  </p>
  <p>
    <br>
     <%= form.select :restaurant_id, Restaurant.all.map{|m| [m.name, m.id] },{prompt: "Please select Restaurant"}, class: "form-control" %>
  </p>
  <% if menu.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(menu.errors.count, "error") %> prohibited this menu from being saved:</h2>

      <ul>
      <% menu.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
